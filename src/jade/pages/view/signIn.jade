.container-fluid
  .row
    .col-sm-6.col-sm-offset-3
      .h3(translate="MAIN.SIGN_IN")
      .well
        form.form-horizontal(name="vm.signInForm" novalidate)
          .form-group
            label.col-sm-4.control-label(for="login" translate="MAIN.EMAIL")
            .col-sm-8
              input#login.form-control(type="text" placeholder="{{ 'MAIN.EMAIL' | translate }}" ng-model='vm.user.login' name="login" login required)
          .form-group
            label.col-sm-4.control-label(for="password" translate="MAIN.PASSWORD")
            .col-sm-8
              input#password.form-control(type="password" placeholder="{{ 'MAIN.PASSWORD' | translate }}" ng-model='vm.user.password' name="password" required)
          .form-group
            .col-sm-offset-4.col-sm-8
              .checkbox
                label
                  input(type="checkbox" name='rememberMe' ng-model='vm.user.rememberMe')
                  span(translate="MAIN.REMEMBER_ME")
          .form-group
            .col-sm-offset-4.col-sm-8
              button.btn.btn-default(translate="MAIN.SIGN_IN" ng-click='vm.signIn()')
  .row
    .col-sm-6.col-sm-offset-3
      .well.text-center
        span(translate="SIGN_PAGE.IF_YOU_DONT_HAVE_ACCOUNT")
        br
        br
        button.btn.btn-primary(ui-sref="signUp" translate="SIGN_PAGE.REGISTRATION")